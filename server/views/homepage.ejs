      /* Black Div */
      .blackDiv {
        display : none;
        position: absolute;
        top: 0;
        bottom: 0;
        right: 0;
        left: 0;
        z-index: 2;
        background-color: rgba(0, 0, 0);
        opacity: 0.5;
        animation: blackDivAppearing 0.5s;
      }

      
      @keyframes blackDivAppearing {
        0% {
          opacity: 0;
        }
        100% {
          opacity: 0.5;
        }
      }

      @media only screen and (max-width: 1024px) {
      .container {
        width: 80%;
        }
      }  

