      }

      .arrow-menu.importedStyle {
        top: 4px;
      }
      .current-app-lang {
        position: relative;
        width: 40px;
        outline: none;
      }

      .flag-drop-down {
        cursor: pointer;
        padding: 5px;
        background-color: var(--background-color);
      }

      .set-lang-choosing {
        position: absolute;
        top: 28px;
        right: 8px;
        left: 0;
        box-shadow: 1px 1px 1px black;
