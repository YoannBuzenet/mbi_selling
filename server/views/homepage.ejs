      .set-lang-choosing .flag-drop-down:last-child {
        border-bottom-left-radius: 5px;
        border-bottom-right-radius: 5px;
      }

      .current-app-lang img {
        border-radius: 3px;
        outline: none;
      }

      .current-lang-flag {
        position: absolute;
        cursor: pointer;
        padding-right: 1rem;
        top: 26px;
        margin-left: 0px;
      }

