                  </div>

                   <!-- One language -->
                  <div class="flag-drop-down" id="en-flag-button">
                    <img src="/flags/25X13/en.png"/>
                  </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </nav>
    <div class="margin-bottom"></div>

    <!-- <Menu Responsive> -->
      <div class="responsive_menu">
        <div class="not_connected_options_responsive">
          <div class="connection">
            <a class="classic_links_responsive" href="/register" >
              Register</a>
            <a class="classic_links_responsive" href="/login">
              Connect</a>
              <div class="burgerMenuCustomer-select-lang">
                <div class="current-app-lang" id="currentAppLanguage">
                  <div class="current-lang-flag" id="currengFlag">
                    <img src="/flags/25X13/en.png" id="currentlyDisplayedFlag"/>
                    <span class="arrow-menu arrow-app-lang importedStyle"></span>

                      <!-- Displaying all flags div -->
                      <div class="set-lang-choosing lang-select-applevel importedStyle" id="displayingFlagsDiv">
                        
                        <!-- One language -->
                        <div class="flag-drop-down" id="fr-flag-button">
                            <img src="/flags/25X13/fr.png"/>
                        </div>

                        <!-- One language -->
                        <div class="flag-drop-down" id="en-flag-button">
                          <img src="/flags/25X13/en.png" />
                        </div>
                    </div>

                  </div>
                </div>
              </div>
          </div>
        </div>
      </div>
        <!-- </Menu Responsive> -->

