      .fourth-liner .tick-box {
        flex-direction: column;
        align-items: center;
      }
      .tick-box > div {
        width: 50%;
      }
    }

    /***FIFTH LINER ***/

    .fifth-liner {
      padding: 5rem 0;
      background-color: rgb(249, 250, 251);
    }

    .fifth-liner > div {
      display: flex;
      justify-content: space-between;
      align-items: center;
      max-width: 1024px;
      margin: 0 auto;
    }

    .fifth-liner a.CTA-button {
      margin-top: 0;
    }

    .fifth-liner p {
      font-size: 2.8rem;
      font-weight: 700;
    }

    @media only screen and (max-width: 1400px) {
      .fifth-liner > div {
        flex-direction: column;
        text-align: left;
      }
    }
    @media only screen and (max-width: 768px) {
      .fifth-liner p {
        text-align: center;
      }
    }


