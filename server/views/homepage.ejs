      /******** MENU ********/
      /**********************/

      .classic-links {
        margin: 1rem;
        padding: 1rem;
        text-decoration: none;
        color: black;
        border-radius: 50px;
      }

      .classic-links:hover {
        background-color: var(--main-bg-color);
        cursor: pointer;
      }

      .logo-shop-link {
      }

      nav {
        background-color: white;
        box-shadow: 1px 1px 1px rgba(0, 0, 0, 0.3);
      }

      nav > .container {
        display: flex;
        justify-content: space-between;
      }

      .menu-links-left {
        display: flex;
        justify-content: space-between;
        align-items: center;
      }

      .navbar {
        position: fixed;
        top: 0;
        z-index: 8;
        width: 100%;
        background-color: white;
        min-height: 61px;
      }
      .navbar .container {
        margin-top : 10px;
      }

      .navbar input[type="search"] {
        border: 1px solid rgba(0, 0, 0, 0.5);
