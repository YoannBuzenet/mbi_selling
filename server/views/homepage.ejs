        padding: 0;
      }

      .container {
        max-width: 70%;
        margin: 0 auto;
      }

      p,
      ul,
      li,
      div,
      td {
        font-size: 1.6rem;
        font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
      }

      ul {
        margin: 0;
        padding: 0;
      }

      main {
        overflow: hidden;
      }

      #root {
        min-height: 100vh; /* will cover the 100% of viewport */
        overflow: hidden;
        display: block;
        position: relative;
        padding-bottom: 120px; /* height of the footer */
      }

      /* Removing the scrolling bar */
      html {
        overflow: scroll;
        overflow-x: hidden;
    }
    ::-webkit-scrollbar {
